<header class="header pure-u-1"> 
  <div class="pure-menu pure-menu-open pure-menu-fixed pure-menu-horizontal">
      
        <ul>
          <li><%= link_to image_tag('olympics_rings_logo.png'), root_path,
                  id: "logo" %></li>
          <li class="pure-menu-custom-separator-vertical"</li>
          <% if user_signed_in? %>
            <li><%= link_to 'The Schedule', schedule_path %></li>
            <li><%= link_to 'The Players', players_path %></li>
            <li class="pure-menu-can-have-children pure-menu-has-children">
              <a href="#" data-toggle="dropdown">My Account <span class="pure-custom-caret"></span></a>
              <ul class="pure-menu-children">
                <li><%= link_to "Profile", profile_path %></li>
                <li><%= link_to "Edit", edit_user_registration_path %></li>
                <li class="pure-menu-separator"></li>
                <li>
                  <%= link_to "Log Out", destroy_user_session_path,
                      method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Login", new_user_session_path %></li>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
</header>

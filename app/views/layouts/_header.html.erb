<header class="header pure-u-1"> 
  <div class="pure-menu pure-menu-open pure-menu-fixed pure-menu-horizontal">
      <div class="pure-menu-heading"><%= link_to image_tag('olympics_rings_logo.png'), root_path, id: "logo" %></div>
        <ul>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to '2013 Schedule', schedule_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Stats", "#" %></li>
            <li class="pure-menu-can-have-children pure-menu-has-children">
              <a href="#" data-toggle="dropdown">Account <span class="pure-custom-caret"></span></a>
              <ul class="pure-menu-children">
                <li><%= link_to "Profile", "#" %></li>
                <li><%= link_to "Settings", "#" %></li>
                <li class="pure-menu-separator"></li>
                <li>
                  <%= link_to "Sign Out", "#", method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class='pure-menu-disabled'><%= link_to "Sign In", "#" %></li>
          <% end %>
        </ul>
      </div>
</header>

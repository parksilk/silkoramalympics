<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "pure-form pure-form-stacked" }) do |f| %>

  <%= f.error_notification %>

  <%= f.input :email, autofocus: true %>

  <p><%= f.submit "Send password reset instructions", class: "pure-button" %></p>
<% end %>

<%= render "devise/shared/links" %>
